{% extends "./base.html.twig" %}

{% block title %}
	Home | Blogs
{% endblock %}

{% block body %}
	<div class="w-4/5 m-auto text-center">
		<div class="py-12 border-b border-gray-200">
			<h1 class="text-6xl pt-12 pb-8">
				My Blogs ({{ blogs|length }})
			</h1>
		</div>
	</div>

	<div class="mx-auto w-4/5 my-8">
		<a href="{{ path('create-blog') }}" class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800">
			Create New blog
		</a>
	</div>

	<div
		class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 ">
		<!-- Review Item -->
		{% for blog in blogs %}
			<div class="text-center pt-8 pb-4">

				<h2 class="text-gray-700 font-bold text-3xl py-2">
					{{ blog.title }}
				</h2>

				<span class="text-gray-500">
					By
					<span class="italic text-sm text-gray-800">{{ blog.userEmail ?? '' }}

					</span>
					<p class="my-4">{{ blog.getTimeFormatted() }}</p>

					<img src="{{ blog.imagePath }}" alt="" class="shadow-xl rounded-md"/>

					<a href="{{ path('show',{id: blog.id}) }}" class="block my-6 uppercase border border-gray-500 text-gray-600 text-lg py-4 px-12 rounded transition transition-all hover:bg-gray-800 hover:text-white">


						Keep Reading
					</a>
				</div>
			{% endfor %}
		</div>
	{% endblock %}
